<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.daysjourney.UserPageActivity$PlaceholderFragment" >

    <com.example.daysjourney.graph.LineGraph
        android:id="@+id/outsideGraph"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        	android:id="@+id/line_value_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/outsideGraph"
        	android:orientation="vertical"
        >

        <!-- The first line -->

        <LinearLayout
            android:id="@+id/line_temp_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/outside_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/boxblue_leftround"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/boxblue_rightround"
                android:gravity="center"
                android:text="â„ƒ"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/boxred_leftround"
                android:gravity="center"
                android:text="LT"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/outside_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/boxred_rightround"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp" />
        </LinearLayout>
        <!-- The end of first line -->


        <!-- The second line -->

        <LinearLayout
            android:id="@+id/line_humidity_dust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/outside_humidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/boxblue_leftround"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/boxblue_rightround"
                android:gravity="center"
                android:text="%"
                android:textSize="15dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/boxred_leftround"
                android:gravity="center"
                android:text="DU"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/outside_dust"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/boxred_rightround"
                android:gravity="center"
                android:text="0"
                android:textSize="30dp" />
        </LinearLayout>
        <!-- The end of second line -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_value_set"
        android:layout_marginTop="8dp" >

        <Button
            android:id="@+id/outside_single_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="Single" />

        <Button
            android:id="@+id/outside_continuous_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="Stop" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/outside_busy_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/outside_connect_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/outside_busy_progressbar"
        android:text="Connect" />

    <TextView
        android:id="@+id/outside_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/outside_connect_button"
        android:layout_toRightOf="@id/outside_connect_button"
        android:text="Result" />

    <!-- style="@android:style/Widget.ProgressBar.Small" -->

</RelativeLayout>