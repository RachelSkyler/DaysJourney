<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!--
    	Main Home of application
    	Shown after the intro page
    -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/main_home"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp" >

        <Button
            android:id="@+id/sign_up_page_button"
        	android:layout_width="@dimen/button_width"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="@dimen/margin_side"
            android:background="@color/sky_blue_color"
        	android:text="@string/title_activity_sign_up"
        	android:textColor="@color/white_color"
        />
       
        <Button
            android:id="@+id/sign_in_page_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/sign_up_page_button"
            android:background="@color/dark_blue_color"
            android:text="@string/title_activity_sign_in"
            android:textColor="@color/white_color" />
    </RelativeLayout>

</LinearLayout>
