<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/frame_popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sky_blue_color"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_side"
    android:layout_marginRight="@dimen/margin_side"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="15dp"
        android:text="Hardware Authentication" 
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/ip_address_popup_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_popup_ip_address" />

    <EditText
        android:id="@+id/arduino_id_popup_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_popup_id"
        android:maxLines="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/arduino_password_popup_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text_popup_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />

    <Button
        android:id="@+id/send_button_popup_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/text_popup_send_button" />

</LinearLayout>