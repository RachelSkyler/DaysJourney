        -->

        <activity
            android:name="common.MainActivity"
            android:label="@string/title_activity_main_home" >
        </activity>
        <activity
            android:name="common.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="user.UserPathActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="user.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="user.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="user.RegisterDestinationActivity"
            android:label="@string/title_activity_register_destination" >
        </activity>
        <activity
            android:name="user.RegisterHomeActivity"
            android:label="@string/title_activity_register_home" >
        </activity>
    </application>

</manifest>